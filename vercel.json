{
  "rewrites": [
    {
      "source": "/((?!manifest.json|favicon.ico|logo.*\\.png|robots.txt|sitemap.xml|static/|_next/|api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        }
      ]
    }
  ]
} 