{
  "rewrites": [
    {
      "source": "/((?!static/|favicon.ico|manifest.json|logo.*\\.png).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "index, follow"
        },
        {
          "key": "Content-Language",
          "value": "ar, en, ku"
        }
      ]
    }
  ]
} 