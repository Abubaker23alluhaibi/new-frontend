{
  "rewrites": [
    {
      "source": "/((?!manifest.json|favicon.ico|logo.*\\.png|robots.txt|sitemap.xml|static/|_next/|api/).*)",
      "destination": "/index.html"
    }
  ],
  "routes": [
    {
      "src": "/login",
      "dest": "/index.html"
    },
    {
      "src": "/signup",
      "dest": "/index.html"
    },
    {
      "src": "/home",
      "dest": "/index.html"
    },
    {
      "src": "/doctor-dashboard",
      "dest": "/index.html"
    },
    {
      "src": "/profile",
      "dest": "/index.html"
    },
    {
      "src": "/my-appointments",
      "dest": "/index.html"
    },
    {
      "src": "/medicine-reminder",
      "dest": "/index.html"
    },
    {
      "src": "/health-centers",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "index, follow"
        },
        {
          "key": "Content-Language",
          "value": "ar, en, ku"
        }
      ]
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "installCommand": "npm install"
} 